@model IEnumerable<RMQGrainsBeta.Models.AccountsRecievable>
@{
    ViewBag.Title = "Accounts Recievable";
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>

<h2>Accounts Recievable</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-inline" }))
{
    <div class="form-group">

        <label>Filter From Date  </label><input type="text" name="DateFrom" id="FilterFrom" class="form-control datepicker" />
    </div>
    <div class="form-group">

        <label>Filter To Date  </label><input type="text" name="DateTo" id="FilterTo" class="form-control datepicker invisible " />
        <input type="submit" id="sbButton" value="Filter" class="form-group btn btn-primary invisible" />
    </div>
}
<br />
<table class="table table-bordered">
    <tr>
        <th>@Html.DisplayNameFor(modelItem => modelItem.DateProcessed)</th>
        <th>@Html.DisplayNameFor(modelItem => modelItem.CustomerName)</th>
        <th>@Html.DisplayNameFor(modelItem => modelItem.BankName)</th>
        <th>@Html.DisplayNameFor(modelItem => modelItem.Branch)</th>
        <th>@Html.DisplayNameFor(modelItem => modelItem.ChequeNumber)</th>
        <th>@Html.DisplayNameFor(modelItem => modelItem.DateOfCheque)</th>
        <th>@Html.DisplayNameFor(modelItem => modelItem.Amount)</th>
    </tr>
    @foreach (var item in Model)
    {
       <tr>
           <td>@Html.DisplayFor(modelItem => item.DateProcessed)</td>
           <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
           <td>@Html.DisplayFor(modelItem => item.BankName)</td>
           <td>@Html.DisplayFor(modelItem => item.Branch)</td>
           <td>@Html.DisplayFor(modelItem => item.ChequeNumber)</td>
           <td>@Html.DisplayFor(modelItem => item.DateOfCheque)</td>
           <td>@Html.DisplayFor(modelItem => item.Amount)</td>
       </tr> 
    }
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td><strong>Total Amount</strong> : @ViewBag.TotalAmount</td>
    </tr>

</table>


<script>
    $(function () {
        $(".datepicker").datepicker();
    });

</script>


<script>
    $("#FilterFrom").on('change', function () {
        if ($(this).val() != "") {
            $("#FilterTo").removeClass("invisible");
            $("#sbButton").removeClass("invisible");
        } else {
            $("#FilterTo").addClass("invisible");
            $("#sbButton").addClass("invisible")
        }
    });
</script>
