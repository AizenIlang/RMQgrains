
@{
    ViewBag.Title = ViewBag.Operation;
}

<h2>@ViewBag.Operation</h2>



            
                <div class="form-group">
                    <div class="col col-md-2">
                        <label>Date Processed : </label>

                    </div>
                    <div class="col col-md-10">
                        <input type="text" value="@Model.DateProcessed" />
                    </div>

                </div>

                <div class="form-group">
                    <div class="col col-md-2">
                        <label>Date Closed : </label>

                    </div>
                    <div class="col col-md-10">
                        <input type="text" value="@DateTime.Now" />
                    </div>

                </div>

                <div class="form-group">
                    <div class="col col-md-2">
                        <label>SO Number : </label>

                    </div>
                    <div class="col col-md-10">
                        <input type="text" value="@Model.SONumber" />
                    </div>

                </div>

                <div class="form-group">
                    <div class="col col-md-2">
                        <label>Total Sacks Sold : </label>

                    </div>
                    @{var totalsold = Model.QuantityToDeliver - Model.CurrentStock;}
                    <div class="col col-md-10">
                        <input type="text" value="@totalsold" />
                    </div>

                </div>

                <div class="form-group">
                    <div class="col col-md-2">
                        <label>Quantity to Deliver : </label>

                    </div>
                    <div class="col col-md-10">
                        <input type="text" value="@Model.QuantityToDeliver" />
                    </div>

                </div>

                <div class="form-group">
                    <div class="col col-md-2">
                        <label>Total Income : </label>

                    </div>
                    <div class="col col-md-10">
                        <input type="text" value="@ViewBag.IncomeAsWhole" />
                    </div>

                </div>

                <div class="form-group">
                    <div class="col col-md-2">
                        <label>Total Expense : </label>

                    </div>
                    <div class="col col-md-10">
                        <input type="text" value="@ViewBag.TotalAsWhole" />
                    </div>

                </div>

@using (@Html.BeginForm("ForStorage", "SummaryTransaction", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <div class="col col-md-2">
            <label>Remarks : </label>

        </div>
        <div class="col col-md-10">
            <input type="text" value="" name="Remarks"/>
        </div>

    </div>

    <input type="hidden" name="SOnumber" value="@Model.SONumber" />
    <input type="submit" value="Close Transaction"/>

}